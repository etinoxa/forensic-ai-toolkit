# FAIT logging
FAIT_LOG_LEVEL=INFO
FAIT_LOGS_DIR=.fait/logs
FAIT_LOG_JSON_CONSOLE=false
FAIT_LOG_MAX_BYTES=52428800   # 50 MB
FAIT_LOG_BACKUPS=14

# Centralized paths (leave unset to use defaults under .fait/)
# FAIT_HOME=
# FAIT_OUTPUTS_DIR=.fait/outputs
# FAIT_LOGS_DIR=.fait/logs
# FAIT_CACHE_DIR=.fait/cache
# FAIT_MODELS_CACHE_DIR=.fait/cache/models
# FAIT_EMBEDDINGS_CACHE_DIR=.fait/cache/embeddings

# Object screening closed-set verifier:
FAIT_OBJECT_STRATEGY=gdino_only        # gdino_only or detector_only | two_stage #   two_stage = grounding-dino + yolo | deformable_detr
FAIT_OBJECT_VERIFIER=none               # used in  two_stage or detector_only = yolo | deformable_detr

# LLM provider settings
FAIT_LLM_ID=Qwen/Qwen2.5-0.5B-Instruct

# Tensorflow Warning Suppression
TF_CPP_MIN_LOG_LEVEL=3  # 0=all, 1=INFO off, 2=+WARNING off, 3=+ERROR off (keep only FATAL)
TF_ENABLE_ONEDNN_OPTS=0